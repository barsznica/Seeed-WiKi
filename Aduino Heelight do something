/*
 Software and Harware serial feor Heelight Sensor
 
 The circuit:
 * RX is digital pin 6 (connect to TX of other device)
 * TX is digital pin 7 (connect to RX of other device)
 * 
 Note: Not all pins on the Mega and Mega 2560 support change interrupts,
 so only the following can be used for RX:
 10, 11, 12, 13, 50, 51, 52, 53, 62, 63, 64, 65, 66, 67, 68, 69
 Not all pins on the Leonardo support change interrupts,
 so only the following can be used for RX:
 8, 9, 10, 11, 14 (MISO), 15 (SCK), 16 (MOSI).
 
 modified 16 October 2017
 by Peter Barsznica
 
 modified 25 May 2012
 by Tom Igoe
 
 based on Mikal Hart's example
 
 This example code is in the public domain.
 */
 
#include <SoftwareSerial.h>

SoftwareSerial mySerial(6, 7); // RX, TX
int part1 = 0;
int part2 = 0;
bool debug = true; // 1==true OR 0 (false). Anything except for 0 is 'true'

void setup()
{
  Serial.begin(115200); // Open serial communications port
  mySerial.begin(115200); // Open "software serial" port
  while (!Serial) {
    ; // wait for serial port to connect. Needed for Leonardo only
  }
  Serial.println("Ready!"); 
}

void loop() // run over and over and over and over and over and over...
{
  if (mySerial.available())
  {
    Serial.print(mySerial.read(),HEX);
    Serial.print(mySerial.read(),HEX);
    Serial.print(' ');
    part1 = mySerial.read();
    Serial.print(part1);
    Serial.print(',');
    part2 = mySerial.read();
    Serial.println(part2);

    // Do somethin' based on the result:
    if (part1 == 0 && part2 == 138)
    {
      Serial.println("Received '138'");
      // Per action here e.g. led on, pwm(50%), etc...
    }
    else if (part1 == 0 && part2 == 139)
    {
      Serial.println("Received '139'");
      // Perform a different action here e.g. led on, pwm(50%), etc...
    }
    else
    {
      Serial.println("Didn't get what I was expecting!");
      // Do something, if you want (or not)
    }
  }
  if (Serial.available())
    mySerial.write(Serial.read());
}
